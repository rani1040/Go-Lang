#conversion of one type to anothore
package main

import "fmt"

func main() {
	 var i int=42
	 fmt.Println("%v,%T",i,i)
	 var j string
	 j=string(i)
	 fmt.Println("%v,%T",j,j)

	fmt.Println("Hello, 世界")
}

